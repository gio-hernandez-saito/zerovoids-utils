{
	"name": "@zerovoids/utils",
	"version": "0.0.1",
	"description": "Type-safe utility library for number formatting, unit conversion, and precision rounding",
	"author": "zerovoids",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./number": {
			"types": "./dist/number/index.d.ts",
			"import": "./dist/number/index.js",
			"require": "./dist/number/index.cjs"
		},
		"./unit": {
			"types": "./dist/unit/index.d.ts",
			"import": "./dist/unit/index.js",
			"require": "./dist/unit/index.cjs"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "vite build --watch",
		"build": "vite build",
		"type-check": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest --coverage",
		"lint": "biome check .",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"ci:check": "biome ci .",
		"ci:verify": "pnpm run ci:check && pnpm run build && pnpm run test",
		"prepare": "husky",
		"release": "pnpm run build && changeset publish"
	},
	"keywords": [
		"typescript",
		"utilities",
		"number-formatting",
		"unit-conversion",
		"precision-rounding",
		"banker-rounding",
		"tree-shaking",
		"esm",
		"cjs",
		"zero-dependencies"
	],
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@changesets/cli": "^2.29.7",
		"@types/node": "^24.5.2",
		"@vitest/coverage-v8": "^3.2.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.0",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^3.2.4"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json}": "biome check --write"
	},
	"packageManager": "pnpm@10.17.1",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=10.0.0"
	}
}
